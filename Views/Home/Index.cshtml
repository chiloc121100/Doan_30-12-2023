    function handleScroll() {
        // Check if the scroll position is 900px or higher
        if (window.scrollY >= 900) {         
            fixMapDiv.classList.add('fixed'); // Add the 'fixed' class
        } else {
            fixMapDiv.classList.remove('fixed'); // Remove the 'fixed' class
