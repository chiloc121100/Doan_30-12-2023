<script>
    function HandleAcceptOrcancel(id) {
        var form = $(event.target).closest(".censorship-form");

        $.ajax({
            url: form.attr("action"),
            type: "POST",
            data: form.serialize(),
            dataType: "json",
            success: function (data) {
                var button = form.find(".btnAcceptOrCancel");

                if (data) {
                    button.text("UnAccept");
                } else {
                    button.text("Accept");
                }
            },
            error: function () {
                displayMessage("error", "An error occurred.");
            }
        });

        // Prevent the default form submission
